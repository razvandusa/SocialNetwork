<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<VBox styleClass="body"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.controller.FriendRequestWindow"
      alignment="TOP_CENTER">
    <StackPane prefHeight="72" style="-fx-background-color: #F4F2EF;">
        <HBox spacing="20" alignment="CENTER_LEFT">
            <ImageView fx:id="logoImage"
                       fitHeight="72"
                       pickOnBounds="true"
                       preserveRatio="true">
                <image>
                    <Image url="@/images/logoApp.png"/>
                </image>
            </ImageView>
        </HBox>
        <HBox alignment="CENTER_RIGHT" spacing="10.0" style="-fx-padding: 0 20 0 0">
            <children>
                <!-- Butonul de Profil -->
                <Button fx:id="profileButton" mnemonicParsing="false" onAction="#handleProfile" prefHeight="40.0" prefWidth="40.0" style="-fx-background-color: white; -fx-border-radius: 5; -fx-background-radius: 5;">
                    <graphic>
                        <ImageView fitHeight="30.0" fitWidth="30.0" preserveRatio="true">
                            <image>
                                <Image url="@../images/profileIcon.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
            </children>
        </HBox>
    </StackPane>

    <children>
        <VBox prefHeight="640.0" prefWidth="360.0" spacing="10.0" alignment="CENTER" styleClass="root">
            <children>
                <Label text="Connect with new friends" styleClass="header-label" />
                <TableView fx:id="friendRequestsTable" prefHeight="540.0" prefWidth="340.0" styleClass="table-view">
                    <columns>
                        <TableColumn fx:id="usernameColumn" text="Username" prefWidth="113.33" styleClass="table-column" />
                    </columns>
                </TableView>
                <HBox spacing="10.0" alignment="CENTER">
                    <Button fx:id="acceptButton" text="Accept" styleClass="accept-button" onAction="#handleAccept" />
                    <Button fx:id="declineButton" text="Decline" styleClass="deny-button" onAction="#handleDeny" />
                </HBox>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </children>
</VBox>
