<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox styleClass="body"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.controller.MessagesWindow"
      alignment="TOP_CENTER">
    <StackPane prefHeight="72" style="-fx-background-color: #F4F2EF;">
        <HBox spacing="20" alignment="CENTER_LEFT">
            <ImageView fx:id="logoImage"
                       fitHeight="72"
                       pickOnBounds="true"
                       preserveRatio="true">
                <image>
                    <Image url="@/images/logoApp.png"/>
                </image>
            </ImageView>
        </HBox>
        <HBox alignment="CENTER_RIGHT" spacing="10.0" style="-fx-padding: 0 20 0 0">
            <children>
                <!-- Butonul de Profil -->
                <Button fx:id="profileButton" mnemonicParsing="false" onAction="#handleProfile" prefHeight="40.0" prefWidth="40.0" style="-fx-background-color: white; -fx-border-radius: 5; -fx-background-radius: 5;">
                    <graphic>
                        <ImageView fitHeight="30.0" fitWidth="30.0" preserveRatio="true">
                            <image>
                                <Image url="@../images/profileIcon.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
            </children>
        </HBox>
    </StackPane>

    <!-- Body principal cu tabelul de prieteni și butoanele -->
    <VBox prefHeight="480.0" prefWidth="360.0" spacing="20.0" style="-fx-padding: 20; -fx-background-color: #197d13;">
        <Label styleClass="header-label" text="Messages" />
        <TableView fx:id="friendsTable" prefHeight="186.0" prefWidth="320.0" style="-fx-padding: 10; -fx-alignment: CENTER; -fx-background-color: #197d13;">
            <columns>
                <TableColumn fx:id="usernameColumn" prefWidth="160.0" style="-fx-background-color: #E5E7E6;" text="username" />
            </columns>
        </TableView>

        <!-- Butoane Previous și Next aliniate la mijloc -->
        <HBox alignment="CENTER" spacing="10.0">
            <Button fx:id="prevPageButton" onAction="#handlePrevPage" styleClass="nav-button" text="Previous" />
            <Button fx:id="nextPageButton" onAction="#handleNextPage" styleClass="nav-button" text="Next" />
        </HBox>
    </VBox>

    <Region prefHeight="40"/>

    <!-- Butonul de Chat în footer -->
    <Button fx:id="chatButton" layoutX="79.0" layoutY="518.0" mnemonicParsing="false" onAction="#handleChat" prefHeight="98.0" prefWidth="202.0" styleClass="chatbutton" text="Chat" textAlignment="CENTER">
        <font>
            <Font size="18.0" />
        </font>
    </Button>
</VBox>
